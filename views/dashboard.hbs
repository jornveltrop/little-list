<main>
    <h2> Dit zijn jouw lijstjes, {{user.given_name}}:</h2>
    <ul class="listView">

        {{#each lists}}
            <li>
                <a href="/{{this.url}}">
                    <h3>{{#ifCond this.naam null}} {{this.url}} {{else}} {{this.naam}} {{/ifCond}}</h3>
                </a>
            </li>
        {{/each}}

        <form class="makeList" action="/" method="post">
            <button type="submit">Nieuw lijstje +</button>
        </form>
    </ul>
</main>
